<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.utp.opusmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainUser"
            android:label="@string/title_activity_main_user"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.edu.utp.opusmanagement.MainActivity" />
        </activity>
        <activity
            android:name=".Working"
            android:label="@string/title_activity_working"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.edu.utp.opusmanagement.MainActivity" />
        </activity>
        <activity
            android:name=".Users"
            android:label="@string/title_activity_users"
            android:parentActivityName=".MainUser"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.edu.utp.opusmanagement.MainUser" />
        </activity>
        <activity
            android:name=".UserDetail"
            android:label="@string/title_activity_user_detail"
            android:parentActivityName=".Users"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.edu.utp.opusmanagement.Users" />
        </activity>
        <activity
            android:name=".WorkDetail"
            android:label="@string/title_activity_work_detail"
            android:parentActivityName=".Working"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.edu.utp.opusmanagement.Working" />
        </activity>
        <activity
            android:name=".WorkActivities"
            android:label="@string/title_activity_work_activities"
            android:parentActivityName=".WorkDetail"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.edu.utp.opusmanagement.WorkDetail" />
        </activity>
    </application>

</manifest>